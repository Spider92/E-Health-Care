@model E_Health.Models.Account.Register

@{
    ViewBag.Title = "Register";
    var registered = TempData["registered"] ?? string.Empty;
}
<script type="text/javascript">
    var registered = '@registered';
    if (registered)
        swal('The user is already registered !!');
</script>

<script src="/Scripts/jquery-1.8.2.min.js"></script>
<style type="text/css">
    .up {
        position: absolute;
        padding: 2%;
        padding-left: 5%;
        left: 0;
        right: 0;
        width: 100%;
        background: url('/img/p.jpg')no-repeat;
        background-size: 100% 100%;
    }

    .right {
        width: 50%;
        float: right;
    }

    .left {
        padding: 2%;
        width: 50%;
        float: left;
    }

    #down {
        color: black;
        font-size: 20px;
        font-family: Centaur;
    }

    #mbody {
        background: #0C697A;
        overflow-x: hidden;
        background-size: cover;
    }
</style>

<body id="mbody">
    @using (Html.BeginForm("Register", "Account"))
    {

        @Html.AntiForgeryToken()
        <div class="up">

            <div class="left">
                <h3 style="color:green;font-family:Gabriola">
                    PATIENT ONLINE SERVICES LOGIN
                </h3>
                <p id="down">
                    Have a question about your care? Need to make an <br>
                    appointment or have one planned? Just need to see
                    <br>your medical record?
                    You're in the right place.
                </p>

                <div class="form-group" style="padding-top:8em">
                    <div class="col-md-10">
                        <h3 style="color:black;font-family:Gabriola">
                            Already got an account?
                            Sign in now.Its easy!!
                        </h3>
                        <input type="button" value="Sign in now" style="width:200px;float:left" class="mybtn" onclick='window.location="@Url.Action("Login","Account")"' />
                    </div>
                </div>
            </div>

            <div class="right">

                <div class="form-horizontal">
                    <br />
                    @Html.ValidationSummary(true)

                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.TextBoxFor(model => model.Name, new { @class = "login-text", placeholder = "YOUR NAME" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "login-text", placeholder = "PASSWORD" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "login-text", placeholder = "CONFIRM PASSWORD" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.TextBoxFor(model => model.Email, new { @class = "login-text", placeholder = "YOUR EMAIL" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            <div class="login-text" style="width:280px">
                                @Html.RadioButtonFor(model => model.Gender, "Male")<strong>Male</strong>
                                @Html.RadioButtonFor(model => model.Gender, "Female")<strong>Female</strong>
                              
                            </div>
                            @Html.ValidationMessageFor(model => model.Gender)

                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.TextBoxFor(model => model.DOB, new { @class = "login-text", placeholder = "DATE OF BIRTH" })
                            @Html.ValidationMessageFor(model => model.DOB)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">

                            <input type="submit" style="float:right" value="Create Account" class="mybtn" />
                            <br>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>