        margin-right: 2%;
        border-radius:3px;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }

    #content {
        background:#262323;
        height: 25px;
        color:white;
        font-family: Cambria;
        border: 1px solid #0C697A;
        float: right;
        margin-top:28%;
        margin-right:2%;
        border-radius: 2px;
    }
