<script src="/Scripts/jquery-1.8.2.min.js"></script>
<style type="text/css">
    #div {
        padding-top: 5%;
        padding-left: 4%;
        width: 80%;
        position: absolute;
        top: 3%;
        left: 20%;
        background: url('/img/slogan.jpg')no-repeat;
        bottom: 0;
        background-size: 100% 100%;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
        background: white;
    }

    .legends {
        background: #0C697A;
        background-size: 100% 100%;
        border-bottom: 0;
        padding-left: 5%;
        border-top-right-radius: 4px;
        border-top-left-radius: 4px;
        font-family: Cambria;
        font-size: 17px;
        color: white;
    }

    #field {
        width: 30%;
        height: 160px;
        float: left;
        margin: 5%;
