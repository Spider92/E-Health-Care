<body id="mbody">
    @{Html.RenderPartial("SideView", "Doctor");}

    <div id="div">
        <fieldset id="field" class="fieldset" style="background: url('/images/admission.jpg')no-repeat;background-size: 100% 100%;color:black">
            <legend class="legends">
                View Problems
            </legend>
            <input type="button" value="Answer problems" id="content" class=" btn-default" onclick='window.location="@Url.Action("ViewProblem","Doctor")"' />

        </fieldset>

        <fieldset id="field" class="fieldset" style="background: url('/photos/l.jpg')no-repeat;background-size: 100% 100%;">
            <legend class="legends">
                Talk to patient
            </legend>

            <input type="button" value="Chat with patient" id="content" onclick="doctorChat();" class="btn-default" />
        </fieldset>
        <fieldset id="field" class="fieldset" style="float: left; background: url('/images/b.jpg')no-repeat; background-size: 100% 100%;">
            <legend class=" legends">
                Update health info
            </legend>
            <input type="button" value="Manage info" id="content" class=" btn-default" onclick='window.location="@Url.Action("Index","Information")"' />
        </fieldset>


    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>
