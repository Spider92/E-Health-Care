@model IEnumerable<E_Health.Models.FA.FirstAid>

@{
    ViewBag.Title = "GetFirstAid";
}

<script src="/Scripts/jquery-1.8.2.min.js"></script>
 @if(Session["PatientId"] == null)
{
    <script>
        function chat() {
            {
                swal('You are not logged in ! Please login now');
            }
        }
    </script>
}
else
{
    <script>
            function chat() {
                {
                    window.location = "@Url.Action("Select_Department", "UserChat")";
                }
            }
    </script>
}
 @if(Session["PatientId"] == null)
{
    <script>
        function post() {
            {
                swal('You are not logged in ! Please login now');
            }
        }
    </script>
}
else
{
    <script>
        function post() {
            {
                window.location = "@Url.Action("PostProblem", "Patient")";
            }
        }

    </script>
}






<style type="text/css">
    #div {
        
        margin-top: 3%;
        width: 80%;
        float: right;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
    }

    #field {
        border: 1px solid white;
        border-radius: 3px;
        padding: 3%;
        padding-bottom: 0;
        background: url('/images/w.jpg')no-repeat;
        background-size: 100% 100%;
    }

    #left {
        width: 20%;
        padding: 2%;
        background: #1f1e1e;
        float: left;
        position: absolute;
        left: 0;
        margin-top: 0%;
        height: 100%;
        border-right: 1px solid black;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }

    .search-div {
        margin-top: 3%;
        width: 100%;
        padding: 0%;
    }

    .search {
        border: 1px solid #0AB0D5;
        width: 100%;
        height: 36px;
    }



    .search-button {
        position: absolute;
        border: 0px solid #0AB0D5;
        background-color: #0AB0D5;
        color: #fafafa;
        height: 36px;
    }

        .search-button:hover {
            background-color: #0AB0D5;
            color: white;
        }

    #content {
        background: #1f1e1e;
        padding: 3%;
        padding-bottom: 0;
        position: fixed;
        height: 100%;
        left: 0;
        width: 20%;
        color: #808080;
        font-family: Cambria;
        border-radius: 2px;
    }

    #btn1 {
        height: 125px;
        width: 125px;
        border-radius: 50%;
        background: url('/Photos/faq.jpg');
        border-style: hidden;
        background-size: 100% 100%;
    }

    #btn2 {
        height: 125px;
        width: 125px;
        border-radius: 50%;
        background: url('/Photos/talk.jpg');
        border-style: hidden;
        background-size: 100% 100%;
    }

    #btn3 {
        height: 125px;
        width: 125px;
        border-radius: 50%;
        background: url('/Photos/firstaid.jpg');
        border-style: hidden;
        background-size: 100% 100%;
    }

    .link {
        color: white;
        text-decoration: none;
        font-family: Cambria;
        font-size: 16px;
    }
</style>

<body id="mbody">
    <div id="content">
        <div style="float: left; margin:3%;margin-top:0">
            <input type="button" id="btn1" onclick="post()" />
            <h4 class="link">Post your prolem</h4>
            <p class="sub">Post your prolem now and you will be answered soon through an email</p>
        </div>
        <div style="float: left; margin:3%;">
            <input type="button" id="btn2" onclick="chat()" />
            <h4 class="link">Consult with doctor</h4>
            <p class="sub">Consult with  doctor and share your problem for immediate  response!</p>
        </div>
    </div>
    <div id="div">
        @using (Html.BeginForm("GetFirstAid", "FirstAid", FormMethod.Post))
        {

            @Html.AntiForgeryToken()

            <div style="background: white; padding: 3%; border-radius: 5px; font-family: Cambria; font-size: 16px; border-top:10px solid gray; border-bottom:10px solid gray">
                <div>
                    <input type="text" name="search_fa" class="search" />
                    <input type="submit" value="Search" class="search-button" />
                </div>
                <hr>
                <br>
                @foreach (var item in Model)
                {
                    <fieldset class="fieldset">

                       
                        <h4>@Html.DisplayFor(modelItem => item.Symptoms)</h4><br>
                        @Html.Raw(item.Treatment)

                    </fieldset>

                }
            </div>

        }
    </div>




    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }




</body>

