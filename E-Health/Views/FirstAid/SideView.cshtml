<div id="left">
    <br><br><br />
    <input type="button" value="Manage latest news" class="btn btn-block" id="side-panel" onclick='window.location="@Url.Action("View_News","Information")"' />
    <input type="button" value="Manage health tips" class="btn btn-block" id="side-panel" onclick='window.location="@Url.Action("View_Tips","Information")"' />
    <input type="button" value="Manage blocked medicine" class="btn btn-block" id="side-panel" onclick='window.location="@Url.Action("View_Medicine","Information")"' />
