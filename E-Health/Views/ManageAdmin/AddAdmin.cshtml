@model E_Health.Models.Admin.AdminModel
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@{
    ViewBag.Title = "Add Admin";
}

<script src="/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<style type="text/css">
    #div {
        margin-top: 3%;
        width: 80%;
        float: right;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
    }

    #field {
        border: 1px solid white;
        border-radius: 3px;
        padding:6%;
        background: url('/images/w.jpg')no-repeat;
        background-size: 100% 100%;
    }

    #left {
        width: 20%;
        padding: 2%;
        background: #1f1e1e;
        float: left;
        position: absolute;
        left: 0;
        margin-top: 0%;
        height: 100%;
        border-right: 1px solid black;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }
</style>

<body id="mbody">
    @{Html.RenderPartial("SideView", "Information");}

    @using (Html.BeginForm("AddAdmin", "ManageAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div id="div">
            <h4 style="color: white; font-family: Cambria">Add new admin to the system</h4>
            <fieldset class="fieldset" id="field">

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AdminName, new { @class = "text-input", placeholder = "Admin Name" })
                            @Html.ValidationMessageFor(model => model.AdminName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AdminEmail, new { @class = "text-input", placeholder = "Admin Email" })
                            @Html.ValidationMessageFor(model => model.AdminEmail)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "text-input", placeholder = "PASSWORD" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "text-input", placeholder = "CONFIRM PASSWORD" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Make Admin" style="float:left" class="mybtn" />
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>

    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
