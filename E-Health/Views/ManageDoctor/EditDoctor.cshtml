@model E_Health.Models.Doctor.Doctors
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<html>
<head>
    <script src="/Scripts/jquery-1.8.2.min.js"></script>
    <title>
        @ViewBag.Title Online Doctor
    </title>

    <style type="text/css">
        #div {
            margin-top: 3%;
            width: 76%;
            float: right;
            position: absolute;
            right: 10px;
        }

        #mbody {
            background: #0C697A;
            background-size: 100% 100%;
        }

        #field {
            border: 1px solid white;
            border-radius: 3px;
            padding: 5%;
            padding-bottom: 0;
            background: url('/images/w.jpg')no-repeat;
            background-size: 100% 100%;
            width: 100%;
            height: 100%;
        }

        .left {
            float: left;
            width: 50%;
            height: 100%;
        }

        .right {
            width: 50%;
            float: right;
            height: 100%;
        }

        #side-panel {
            margin-bottom: 8%;
            background: #0C697A;
            color: white;
            font-family: Candara;
        }
    </style>

</head>

<body id="mbody">
    @{Html.RenderPartial("AdminSideView_Doctor", "Admin");}
    @using (Html.BeginForm("EditDoctor", "ManageDoctor", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div id="div">
            <fieldset class="fieldset" id="field">
                <div class="left">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.DoctorId)
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.DoctorName, new { @class = "login-text", placeholder = "Doctor Name" })
                                <br>
                                @Html.ValidationMessageFor(model => model.DoctorName)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Password, new { @class = "login-text", placeholder = "Password" })<br>
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">

                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "login-text", placeholder = "Confirm Password" })<br>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-10">

                                <select name="Division" class="login-text">
                                    <option value="">Select Department</option>
                                    <option value="Medicine">Medicine</option>
                                    <option value="Cardiology">Cardiology</option>
                                    <option value="Neurology">Neurology</option>
                                    <option value="Skin">Skin and Sex</option>
                                    <option value="Gynaecology">Gynaecology</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-10">
                                <div class="login-text" style="width:280px">
                                    @Html.RadioButtonFor(model => model.Gender, "Male")<strong>Male</strong>
                                    @Html.RadioButtonFor(model => model.Gender, "Female")<strong>Female</strong>
                                    @Html.ValidationMessageFor(model => model.Gender)
                                </div>

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.PresentPosition, new { @class = "login-text", placeholder = "Working Place" })<br>
                                @Html.ValidationMessageFor(model => model.PresentPosition)
                            </div>
                        </div>
                    </div>

                </div>
                <div class="right">
                    <div class="form-horizontal">
                        <div class="form-group">

                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.Address, new { @class = "login-text", placeholder = "Present Address" })<br>
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "login-text", placeholder = "Phone No." })<br>
                                @Html.ValidationMessageFor(model => model.PhoneNo)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.Email, new { @class = "login-text", placeholder = "E-mail" })<br>
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-10">
                                <input id="Images" title="ছবি যোগ করুন"
                                       type="file" name="file" class="login-text" style="margin-left:30%" />

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Update Info" class="mybtn" />
                            </div>
                        </div>

                    </div>
                </div>
                <p style="padding-bottom:10em">.</p>
            </fieldset>

        </div>
    }


</body>
</html>
