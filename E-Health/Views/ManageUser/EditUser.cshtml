@model E_Health.Models.Account.Register
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@{
    ViewBag.Title = "Manage User";
}

<script src="/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<style type="text/css">
    #div {
        margin-top: 3%;
        width: 80%;
        float: right;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
    }

    #field {
        border: 1px solid white;
        border-radius: 3px;
        padding: 6%;
        padding-left: 10%;
        background: url('/images/w.jpg')no-repeat;
        background-size: 100% 100%;
    }

    #left {
        width: 20%;
        padding: 2%;
        background: #1f1e1e;
        float: left;
        position: absolute;
        left: 0;
        margin-top: 0%;
        height: 100%;
        border-right: 1px solid black;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }
</style>

<body id="mbody">
    @{Html.RenderPartial("SideView", "ManageUser");}

    @using (Html.BeginForm("EditUser", "ManageUser", FormMethod.Post))
    {
        <div id="div">
            <h4 style="color: white; font-family: Cambria">Update existing user information</h4>
            <fieldset class="fieldset" id="field">

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.UserId)
                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.TextBoxFor(model => model.Name, new { @class = "text-input", placeholder = "Name" })<br>
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.TextBoxFor(model => model.Email, new { @class = "text-input", placeholder = "Email" })<br>
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "text-input", placeholder = "Password" })<br>
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "text-input", placeholder = "CONFIRM PASSWORD" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                            <div class="text-input" style="width:280px">
                                @Html.RadioButtonFor(model => model.Gender, "Male")<strong>Male</strong>
                                @Html.RadioButtonFor(model => model.Gender, "Female")<strong>Female</strong>
                                @Html.ValidationMessageFor(model => model.Gender)
                            </div>


                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.DOB, new { @class = "text-input", placeholder = "Date of  Birth" })<br>
                            @Html.ValidationMessageFor(model => model.DOB)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Update user" class="mybtn" style="float:left" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>

    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>