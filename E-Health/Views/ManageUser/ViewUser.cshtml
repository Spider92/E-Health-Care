@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@model IEnumerable<E_Health.Models.Account.Register>

<script src="/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<style type="text/css">
    #div {
        margin-top: 3%;
        width:90%;
        float: right;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
    }

    #field {
        border: 1px solid white;
        border-radius: 3px;
        padding: 3%;
        padding-bottom: 0;
        background: url('/images/w.jpg')no-repeat;
        background-size: 100% 100%;
    }

    #left {
        width:10%;
        padding: 2%;
        background: #1f1e1e;
        float: left;
        position: absolute;
        left: 0;
        margin-top: 0%;
        height: 100%;
        border-right: 1px solid black;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }
</style>

<body id="mbody">
    @{Html.RenderPartial("SideView", "Information");}

    @Html.AntiForgeryToken()
    <div id="div">
        <table class="table" style="border:1px solid white;width:100%;background:white">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayName("Date of Birth")
                </th>

                <th> </th>
                <th> </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>



                    <td>
                        @Html.ActionLink("Edit", "EditUser", "ManageUser", new { id = item.UserId }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.UserId },
            new { onclick = "return confirm('Are you sure to delete this account?');" })
                    </td>
                </tr>
            }
        </table>

    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
