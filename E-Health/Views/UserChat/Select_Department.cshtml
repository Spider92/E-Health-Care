<script src="~/Scripts/jquery-1.8.2.min.js"></script>
@{
    ViewBag.Title = "Select_Department";
    var message = TempData["Busy"] ?? string.Empty;
}
<script type="text/javascript">
    var message = '@message';
    if (message)
        swal(message);
</script>
<style type="text/css">
    #div {
        margin-top: 3%;
        width: 100%;
        top: 3%;
        left: 0%;
        height:100%;
        position: fixed;
        padding: 7%;
        padding-top: 2%;
        background: url('/images/b.jpg')no-repeat;
        background-size: 100% 100%;
    }

    #mbody {
        background: #0C697A;
        background-size: 100% 100%;
    }

    .legends {
        background: #223e71;
        background-size: 100% 100%;
        border-bottom: 0;
        padding-left: 5%;
        border-top-right-radius: 4px;
        border-top-left-radius: 4px;
        font-family: Cambria;
        font-size: 17px;
        color: white;
    }

    #field {
        background-size: 100% 100%;
        width: 22%;
        height: 120px;
        float: left;
        margin: 3%;
        margin-top: 01%;
        margin-bottom: 3%;
        margin-right: 3%;
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
    }

    #side-panel {
        margin-bottom: 8%;
        background: #0C697A;
        color: white;
        font-family: Candara;
    }

    #content {
        background: #223e71;
        height: 25px;
        color: white;
        font-family: Cambria;
        border: 1px solid white;
        float: right;
        margin-top: 14%;
        margin-right: 3%;
        border-radius: 2px;
    }
</style>

<body id="mbody">

    <div id="div">
        <h4 style="font-family:Cambria;color:black;margin-left:3%">Choose your department and consult with the specialists!</h4>
        <fieldset id="field" class="fieldset" style="background: url('/dept_photos/1 (10).jpg')no-repeat; background-size: 100% 100%; ">
            <legend class="legends">
                Medicine
            </legend>

            <input type="button" value="Enter" id="content" class=" btn-default" onclick='window.location="@Url.Action("Medicine_Department", "UserChat")"' />

        </fieldset>

        <fieldset id="field" class="fieldset" style="background: url('/dept_photos/1 (2).jpg')no-repeat;background-size:100% 100%">
            <legend class=" legends">
                Neurology
            </legend>
            <input type="button" value="Enter" id="content" onclick='window.location="@Url.Action("Neurology_Department", "UserChat")"' class=" btn-default">
        </fieldset>
        <fieldset id="field" class="fieldset" style="float: left; background: url('/dept_photos/1 (3).jpg')no-repeat; background-size: 100% 100%">
            <legend class=" legends">
                Cardiology
            </legend>

            <input type="button" value="Enter" id="content" onclick='window.location="@Url.Action("Cardiology_Department", "UserChat")"' class=" btn-default" />
        </fieldset>
        <fieldset id="field" class="fieldset" style="float: left; background: url('/dept_photos/skin.jpg')no-repeat; background-size: 100% 100%">
            <legend class="legends">
                Skin and Sex
            </legend>
            <input type="button" value="Enter" id="content" onclick='window.location="@Url.Action("Skin_Department", "UserChat")"' class="btn-default" />
        </fieldset>
        <fieldset id="field" class="fieldset" style="float: left; background: url('/dept_photos/10.jpg')no-repeat; background-size: 100% 100%">
            <legend class="legends">
                Gynaecology
            </legend>
            <input type="button" value="Enter" id="content" onclick='window.location="@Url.Action("Gynaecology_Department", "UserChat")"' class="btn-default" />
        </fieldset>
    </div>

    <div style="position:absolute;bottom:0;left:0;right:0;background:#272525;padding:4px;padding-bottom:0;">
        @{Html.RenderAction("Doctors_Photo", "Home");}
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>
